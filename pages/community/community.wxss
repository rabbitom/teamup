/* community.wxss */
@import "../common.wxss";

.user-avatar-name-skills {
  display: flex;
  flex-direction: row;
}

.user-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.user-name-skills {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
  margin-left: 16rpx;
}

.user-name-idea {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.user-idea-icon {
  width: 1rem;
  height: 1rem;
}
